     <choice>
      <reg>
       похвастал
      </reg>
      <orig>
       похвасталъ
      </orig>
     </choice>
     .
     <choice original_editorial_correction="Еванг[елия]">
      <sic>
       Еванг
      </sic>
      <corr>
       <choice>
        <reg>
         Евангелия
        </reg>
        <orig>
         Евангелiя
        </orig>
       </choice>
      </corr>
     </choice>
     <choice original_editorial_correction="Ар[химандрита]">
      <sic>
       Ар
      </sic>
