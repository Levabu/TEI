     <choice>
      <reg>
       в
      </reg>
      <orig>
       въ
      </orig>
     </choice>
     <choice>
      <reg>
       женском
      </reg>
      <orig>
       женскомъ
      </orig>
     </choice>
     <choice>
      <reg>
       царстве
      </reg>
      <orig>
